snippet color_text
    <: color_text('${1:str}', ${2:color}) :>

snippet color_text_alert
    <: color_text('${1:str}', 'alert') :>

snippet color_text_green
    <: color_text('${1:str}', 'right_green') :>

snippet color_text_yellow
    <: color_text('${1:str}', 'right_yellow') :>

snippet color_text_red
    <: color_text('${1:str}', 'red') :>
